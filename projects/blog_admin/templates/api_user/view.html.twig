{% extends 'base.html.twig' %}

{% block title %}View #{{ apiUser.id }} | API Users | {% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="{{ path('api_users_list') }}">API Users</a></li>
                        <li class="breadcrumb-item active">View</li>
                    </ol>
                </div>
                <h4 class="page-title">API User #{{ apiUser.id }}</h4>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="mb-3">
                        <label>ID</label>
                        <div>
                            {{ apiUser.id }}
                        </div>
                    </div>
                    <div class="mb-3">
                        <label>Token</label>
                        <div>
                            {{ apiUser.token }}
                        </div>
                    </div>
                    <div class="mb-3">
                        <label>Created Date</label>
                        <div>
                            {{ apiUser.createdDate|date('d.m.Y H:i:s') }}
                        </div>
                    </div>
                    <div class="mb-3">
                        <label>Status</label>
                        <div>
                            {{ apiUser.status }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
